{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**"]
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "instructions": ["docs/agents.md"],
  "disabled_providers": ["openai", "gemini"],
  "permission": {
    "bash": "ask",
    "zsh": "ask",
    "pnpm install *": "ask",
    "pnpm update *": "ask",
    "pnpm test *": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "grep": "allow",
    "glob": "allow",
    "read": "allow",
    "lsp": "allow",
    "skill": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "question": "allow"
  }
}
